<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.VolumeControl" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorPrimary">@color/lime</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:tint">@color/lime</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.VolumeControl.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultAlertDialogStyle" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="colorPrimary">@color/lime</item>
        <item name="scrimBackground">@color/lime</item>
    </style>
</resources>